# Note that 'IdentitiesOnly yes' prevents ssh-agent from serving keys.
# It requires default (~/.ssh/id_XXX) or explicit (-i, IdentityFile) keys.
XauthLocation /opt/X11/bin/xauth
Compression yes
IdentitiesOnly yes
IgnoreUnknown UseKeychain
IgnoreUnknown AddKeysToAgent
  UseKeychain yes
  AddKeysToAgent yes

Host *
  ControlMaster auto
  # from https://man.openbsd.org/ssh_config
  # %C is a hash of %l%h%p%r:
  #   %l: The local hostname, including the domain name
  #   %h: The remote hostname
  #   %p: The remote port
  #   %r: The remote username
  ControlPath ~/.ssh/sockets/%C.sock
  ControlPersist 600
  ServerAliveInterval 60
  UserKnownHostsFile ~/.ssh/known_hosts

###### Home & Personal SSH Host config ######

# My router doesn't support EC keys
Host 192.168.1.2
  ControlMaster no
  IdentityFile ~/.ssh/personal_rsa

Host *.local *.home.mckern.sh
  ControlMaster no
  IdentityFile ~/.ssh/personal_ed25519

Host github.com
  ControlMaster no
  Hostname github.com
  User git
  IdentityFile ~/.ssh/personal_ed25519
